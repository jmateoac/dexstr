<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Plasma" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <!--        <item name="windowSplashScreenBackground">?android:colorBackground</item>-->

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <!--        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_plasma_logo</item>-->
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">2000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Plasma</item>
    </style>
</resources>
